.container { padding: 20px; background: #F8F9FD; min-height: 100vh; box-sizing: border-box; }
.section-title { font-size: 16px; font-weight: bold; color: #333; margin-bottom: 5px; }
.hint { font-size: 12px; color: #999; margin-bottom: 20px; }
.card { background: #fff; border-radius: 12px; padding: 0 20px; margin-bottom: 20px; }
.row { display: flex; justify-content: space-between; align-items: center; height: 50px; font-size: 14px; }
.picker-val { font-weight: bold; color: #333; }
.divider { height: 1px; background: #f0f0f0; }
.save-btn { background: #333; color: #fff; border-radius: 30px; font-weight: bold; margin-top: 40px; }